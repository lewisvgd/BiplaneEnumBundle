<?xml version="1.0" encoding="utf-8"?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="biplane_enum.form_type.enum" class="Biplane\EnumBundle\Form\Type\EnumType">
            <tag name="form.type" alias="biplane_enum" />
        </service>

        <service id="biplane_enum.serializer.enum_normalizer" class="Biplane\EnumBundle\Serializer\Normalizer\EnumNormalizer" />

        <service id="biplane_enum.jms_serializer.enum_handler" class="Biplane\EnumBundle\Serializer\Handler\EnumHandler" />

        <service id="biplane_enum.orm_subscriber" class="Biplane\EnumBundle\Subscribers\EnumSubscriber">
            <argument type="service" id="annotation_reader" />
            <tag name="doctrine.event_subscriber" />
        </service>
        <service id="biplane_enum.type_guesser" class="Biplane\EnumBundle\Form\TypeGuesser\EnumTypeGuesser">
            <argument type="service" id="annotation_reader" />
            <tag name="form.type_guesser"/>
        </service>

    </services>

</container>